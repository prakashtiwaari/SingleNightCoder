<h2 style="color:red;">C code to copy the inputted text to a file name check.txt</h2>
<p>#include"apue.h"         //this is my own heade (Replace This).</p></br>
<p>void main()</p></br>
<p>{</p></br>
<p>int ch;</p></br>
<p>FILE *fd=fopen("check.txt" ,"w+");</p></br>
  <p>while((ch=getc(stdin))!=EOF) </p></br>
    <p>if((fputc(ch,fd))==EOF)</p></br>
     <p>printf("Error");</p></br>
<p>}</p></br>
